@model RealtorsPortal.Models.Property

@{
    Layout = "Dashboard";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Create Property</title>
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/5.3.0/css/bootstrap.min.css" rel="stylesheet">
    <style>
        .card {
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            border-radius: 10px;
        }
        h4 {
            font-weight: bold;
            color: #343a40;
        }
        .form-group label {
            font-size: 1.1rem;
            color: #495057;
        }
        .btn-primary {
            background-color: #007bff;
            border-color: #007bff;
            transition: background-color 0.3s ease;
        }
        .btn-primary:hover {
            background-color: #0056b3;
        }
        .custom-file-label {
            overflow: hidden;
        }
    </style>
</head>
<body>
<div class="container mt-5">
    <h4 class="mb-4 text-center">Add New Property</h4>
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card p-4">
                <form asp-action="Create" enctype="multipart/form-data">
                    <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>
                    
                    <!-- Property Name -->
                    <div class="form-group mb-3">
                        <label asp-for="Name" class="control-label"></label>
                        <input asp-for="Name" required class="form-control" placeholder="Enter property name" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                    
                    <!-- Property Address -->
                    <div class="form-group mb-3">
                        <label asp-for="Address" class="control-label"></label>
                        <input asp-for="Address" required class="form-control" placeholder="Enter property address" />
                        <span asp-validation-for="Address" class="text-danger"></span>
                    </div>
                    
                    <!-- Property Price -->
                    <div class="form-group mb-3">
                        <label asp-for="Price" class="control-label"></label>
                        <input asp-for="Price" required class="form-control" placeholder="Enter property price" />
                        <span asp-validation-for="Price" class="text-danger"></span>
                    </div>
                    
                    <!-- Bedrooms -->
                    <div class="form-group mb-3">
                        <label asp-for="Bedrooms" class="control-label"></label>
                        <input asp-for="Bedrooms" required class="form-control" placeholder="Enter number of bedrooms" />
                        <span asp-validation-for="Bedrooms" class="text-danger"></span>
                    </div>
                    
                    <!-- Bathrooms -->
                    <div class="form-group mb-3">
                        <label asp-for="Bathrooms" class="control-label"></label>
                        <input asp-for="Bathrooms" required class="form-control" placeholder="Enter number of bathrooms" />
                        <span asp-validation-for="Bathrooms" class="text-danger"></span>
                    </div>
                    
                    <!-- Property Image -->
                    <div class="form-group mb-3">
                        <label asp-for="Image" class="form-label fs-5">Property Image</label>
                        <input asp-for="Image" required type="file" class="form-control" />
                        <span asp-validation-for="Image" class="text-danger"></span>
                    </div>
                    
                    <!-- Select Agent -->
                    <div class="form-group mb-4">
                        <label asp-for="Id" class="control-label">Select Agent</label>
                        @Html.Partial("_agent", ViewData["agentz"])
                    </div>
                    
                    <!-- Submit Button -->
                    <div class="d-grid">
                        <input type="submit" value="Create Property" class="btn btn-primary btn-lg" />
                    </div>
                </form>
            </div>
        </div>
    </div>
    <div class="text-center mt-4">
        <a asp-action="Index" class="btn btn-link">Back to Property List</a>
    </div>
</div>

<script src="https://stackpath.bootstrapcdn.com/bootstrap/5.3.0/js/bootstrap.bundle.min.js"></script>
</body>
</html>

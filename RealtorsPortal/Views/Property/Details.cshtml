@model RealtorsPortal.Models.Property

@{
    Layout = "Dashboard";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Property Details</title>
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/5.3.0/css/bootstrap.min.css" rel="stylesheet">
    <style>
        .card {
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            border-radius: 10px;
            padding: 20px;
        }

        img {
            border-radius: 10px;
            object-fit: cover;
        }

        .btn-primary {
            background-color: #007bff;
            border-color: #007bff;
            transition: background-color 0.3s ease;
        }

            .btn-primary:hover {
                background-color: #0056b3;
            }

        .btn-secondary {
            transition: background-color 0.3s ease;
        }

            .btn-secondary:hover {
                background-color: #5a6268;
            }
    </style>
</head>
<body>
    <div class="container mt-5">
        <div class="row justify-content-center">
            <div class="col-md-8">
                <div class="card">
                    <h4 class="mb-4">Property Details</h4>
                    <hr />
                    <dl class="row">
                        <dt class="col-sm-4">@Html.DisplayNameFor(model => model.Name)</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.Name)</dd>

                        <dt class="col-sm-4">@Html.DisplayNameFor(model => model.Address)</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.Address)</dd>

                        <dt class="col-sm-4">Image</dt>
                        <dd class="col-sm-8">
                            <img src="@("~/Propertyimages/"+Model.Image)" asp-append-version=true width="300" height="200" />
                        </dd>

                        <dt class="col-sm-4">@Html.DisplayNameFor(model => model.Price)</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.Price)</dd>

                        <dt class="col-sm-4">@Html.DisplayNameFor(model => model.Bedrooms)</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.Bedrooms)</dd>

                        <dt class="col-sm-4">@Html.DisplayNameFor(model => model.Bathrooms)</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.Bathrooms)</dd>

                        <dt class="col-sm-4">Agent</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.Agent.Name)</dd>

                        <dt class="col-sm-4">Private Seller</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.PrivateSeller.Name)</dd>
                    </dl>

                    <div class="d-grid gap-2 d-md-block">
                        <a asp-action="Edit" asp-route-id="@Model?.Property_Id" class="btn btn-primary btn-lg me-3">Edit</a>
                        <a asp-action="Index" class="btn btn-secondary btn-lg">Back to List</a>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script src="https://stackpath.bootstrapcdn.com/bootstrap/5.3.0/js/bootstrap.bundle.min.js"></script>
</body>
</html>

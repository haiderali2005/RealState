@model RealtorsPortal.Models.Team

@{
    ViewData["Title"] = "Team Member Details";
    Layout = "~/Views/Shared/Dashboard.cshtml";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Team Member Details</title>
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/5.3.0/css/bootstrap.min.css" rel="stylesheet">
    <style>
        dt {
            font-weight: bold;
        }

        dd img {
            border-radius: 8px;
        }
    </style>
</head>
<body>

    <div class="container mt-5">
        <h3>Team Member Details</h3>
        <hr />

        <div class="row">
            <dl class="row">
                <dt class="col-sm-3">Name</dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.Name)
                </dd>

                <dt class="col-sm-3">Designation</dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.Designation)
                </dd>

                <dt class="col-sm-3">Image</dt>
                <dd class="col-sm-9">
                    <img src="@("~/Teampics/" + Model.Image)" asp-append-version="true" width="150" height="150" />
                </dd>

                <dt class="col-sm-3">Description</dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.Description)
                </dd>
            </dl>
        </div>

        <div class="mt-4">
            <a class="btn btn-primary" asp-action="Edit" asp-route-id="@Model?.Id">Edit</a>
            <a class="btn btn-secondary" asp-action="Index">Back to List</a>
        </div>
    </div>

    <script src="https://stackpath.bootstrapcdn.com/bootstrap/5.3.0/js/bootstrap.bundle.min.js"></script>
</body>
</html>
